---
import { Image } from "astro:assets";

type Props = {
  image: any;
  title: string;
  date: string;
  slug: string;
  author: string;
};

const { image, title, date, slug, author } = Astro.props;
---

<a
  href={`blog/${slug}`}
  class="transition-all duration-75 ease-in-out h-full block relative top-0 hover:-top-2 shadow-sm hover:shadow-lg bg-white rounded-xl overflow-hidden"
  data-test="article-card"
>
  <Image class="squiggle" src={image} alt={title} width="360" height="192" />
  <div class="py-6 px-8">
    <h2 class="font-bold text-2xl leading-tight">
      {title}
    </h2>
    <p class="text-xs text-gray-600 mt-4 flex items-center">
      {date}
      {author}
    </p>
  </div>
</a>

<style>
  img {
    width: 100%;
    aspect-ratio: 15/7;
    object-fit: cover;
  }
</style>
